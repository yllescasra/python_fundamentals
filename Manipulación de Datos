        "minutos=0\n",
        "costo=0\n",
        "while True:\n",
        "    minutos=int(input(\"Ingresa el tiempo trabajado en minutos: \"))\n",
        "    if minutos == 0:\n",
        "        print(\"No trabajo\")\n",
        "        Break;\n",
        "    if minutos<0:\n",
        "        print(\"No valido\")\n",
        "        continue;\n",
        "    if minutos>480:\n",
        "        costo=225\n",
        "    elif minutos>60:\n",
        "        costo=25+(15*((minutos-60)/60))\n",
        "    elif minutos>0:\n",
        "        costo=25\n",
        "    else:\n",
        "        costo=0\n",
        "    print(\"Total a pagar \", costo)"
