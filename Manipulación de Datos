        "total=0\n",
        "while True:\n",
        "    monto=float(input('Ingrese el monto de la compra:'))\n",
        "    if monto==0:\n",
        "        break;\n",
        "    if monto<0:\n",
        "        print(\"El valor infresado no es valido. \")\n",
        "        continue;\n",
        "    total += monto\n",
        "    if total > 1000:\n",
        "        total *= 0.9\n",
        "    print(\"Total a pagar: \",total)"
      ]
